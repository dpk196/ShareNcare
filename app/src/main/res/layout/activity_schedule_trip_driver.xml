<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ScheduleTripDriver">
    <RelativeLayout
        android:id="@+id/tripDetailsTextLayout"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:background="@color/blue5">

        <TextView
            android:id="@+id/textEmailReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Required Details"
            android:textColor="@color/Black"
            android:textSize="25sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/time_date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tripDetailsTextLayout"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_marginLeft="5dp"
            android:textColor="@color/Black"
            android:id="@+id/label_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="50dp"
            android:text="Trip Start time"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trip_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/label_start_time"
            android:text="Click to set Start time"
            android:textStyle="bold" />

        <TextView
            android:textColor="@color/Black"
            android:id="@+id/label_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trip_start_time"
            android:layout_marginTop="49dp"
            android:text="Start Date"
            android:layout_marginLeft="5dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trip_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="120dp"
            android:layout_toRightOf="@+id/label_start_date"
            android:text="Click to set Date"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fare_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_date_layout"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:textColor="@color/Black"
            android:id="@+id/fare_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:text="Fare"
            android:textStyle="bold"
            android:textSize="25sp" />

        <TextView

            android:id="@+id/fare_id_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="122dp"
            android:layout_marginTop="21dp"
            android:layout_toRightOf="@+id/fare_id"
            android:text="Free Ride"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:backgroundTint="@color/quantum_purpleA400"
            android:id="@+id/change_fare_button"
            android:textColor="@color/Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/fare_id_value"
            android:background="@drawable/white_onclick_grey"
            android:text="Change" />
        <TextView
            android:layout_marginTop="38dp"
            android:textColor="@color/red2"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fare_id"
            android:text="Max Chargeable Fare"
            android:textStyle="bold"
            android:id="@+id/maxChargeTextview"
            android:textSize="18sp"/>
        <TextView
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="96dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fare_id_value"
            android:text="Rs 211"
            android:id="@+id/max_charge_value"
            android:textColor="@color/Black"
            android:layout_toRightOf="@+id/maxChargeTextview"/>

    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fare_layout"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="10dp">

        <Button
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:id="@+id/schedule_ride"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/white_onclick_grey"
            android:backgroundTint="@color/yellow1"
            android:text="Confirm" />

        <Button
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:id="@+id/Reschedule_ride"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/schedule_ride"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="@color/green1"
            android:background="@drawable/white_onclick_grey"
            android:text="RePlan" />
    </RelativeLayout>






</RelativeLayout>