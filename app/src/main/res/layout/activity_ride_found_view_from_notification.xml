<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RideFoundViewFromNotification">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_onMap"
        android:background="@drawable/white_onclick_grey"
        android:layout_marginLeft="10dp"
        android:text="View Location on Map"
        android:layout_marginTop="500dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reject_trip"
        android:layout_marginTop="500dp"
        android:layout_toRightOf="@+id/view_onMap"
        android:layout_marginLeft="50dp"
        android:background="@drawable/white_onclick_grey"
        android:text="Reject"/>


</RelativeLayout>